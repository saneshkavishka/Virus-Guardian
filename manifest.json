{
  "manifest_version": 2,
  "name": "Malware Detection",
  "version": "1.0",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "content_security_policy": "script-src 'self' http://localhost:5000; object-src 'self'",
  "permissions": [
    "webRequest",
    "<all_urls>"
  ]
}